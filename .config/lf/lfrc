set previewer ~/.config/lf/preview
map . set hidden!
set ratios 1:2:3
set color256 on
set icons
map D delete
map gD cd ~/Downloads
map gd cd ~/Documents
map gp cd ~/Pictures
map gt cd ~/Documents/textbooks
map gv cd ~/Videos
map gl cd ~/Documents/latex
map gm cd ~/Music
map gc cd ~/.config
map bw $SHELL wal -i %f && setbg %f
set $OPENER rifle
set number
set relativenumber

